{
    "compilerOptions": {
      "typeRoots": [
        "../types"
      ],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "../dist",
      "rootDir": "../src",
      "lib": [
        "es2015",
        "DOM",
        "es5",
        "es6",
        "dom",
        "dom.iterable"
      ],
    },
    "include": [
      "../src"
    ],
    "exclude": [
      "../node_modules",
      "../dist",
      "../docs",
      "../logs",
      "../config",
      "../tests"
    ],
    "typedocOptions": {
      "entryPoints": [
        "../src"
      ],
      "entryPointStrategy": "expand",
      "out": "../docs",
      "blockTags": ["@param", "@returns" ,"@author"]
    }
  }